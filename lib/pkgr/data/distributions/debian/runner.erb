#!/bin/bash

function usage {
  echo "Usage: $0 run COMMAND [options]"
  exit 1
}

COMMAND_TYPE=""
COMMAND=""

while : ; do
  case "$1" in
    run)
      COMMAND_TYPE="$1"
      shift
      COMMAND="$1"
      shift ;;
    *)
      [ "${COMMAND_TYPE}" = "run" ] || usage
      [ "${COMMAND}" = "" ] && usage
      . /etc/default/<%= name %>
      cd $HOME && exec "vendor/pkgr/processes/${COMMAND}" "$@"
      break ;;
  esac
done
